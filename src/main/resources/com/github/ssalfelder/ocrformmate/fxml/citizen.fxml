<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<ScrollPane fitToHeight="true" fitToWidth="true" xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.github.ssalfelder.ocrformmate.controller.CitizenController">
    <content>
        <VBox alignment="TOP_CENTER" fillWidth="true" spacing="20.0">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <!-- OCR-Bereich mit Platzbedarf -->
            <HBox HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
                <fx:include source="ocrPane.fxml" />
            </HBox>
            <GridPane alignment="CENTER" hgap="20">
                <Button text="Anmelden" onAction="#onCitizenLogin" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <Label text="Senden an" maxHeight="Infinity" GridPane.columnIndex="1" GridPane.rowIndex="0"  />
                <ComboBox fx:id="citizenAuthorityChooser" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <Button fx:id="citizenOCRSubmitButton" text="Senden" onAction="#onCitizenOCRSubmit" maxHeight="Infinity"
                        GridPane.columnIndex="2" GridPane.rowIndex="1" />
                <Button text="Abmelden" onAction="#onCitizenLogin" GridPane.columnIndex="3" GridPane.rowIndex="1" />
            </GridPane>
        </VBox>
    </content>
</ScrollPane>
