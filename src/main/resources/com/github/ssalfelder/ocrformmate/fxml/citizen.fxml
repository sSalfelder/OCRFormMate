<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<ScrollPane fitToHeight="true" fitToWidth="true" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.github.ssalfelder.ocrformmate.controller.CitizenController">
    <content>
        <VBox alignment="TOP_CENTER" fillWidth="true" spacing="20.0">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <!-- OCR-Bereich mit Platzbedarf -->
            <HBox HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
                <fx:include source="ocrPane.fxml" />
            </HBox>
            <HBox alignment="CENTER" spacing="10">
                <ComboBox fx:id="citizenAuthorityChooser" prefWidth="150.0" maxHeight="Infinity"/>
                <Button fx:id="citizenOCRSubmitButton" text="Senden" onAction="#onCitizenOCRSubmit" maxHeight="Infinity"/>
            </HBox>
        </VBox>
    </content>
</ScrollPane>
